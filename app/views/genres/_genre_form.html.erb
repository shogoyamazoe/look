<div class="row">
  <div class="col mx-3">
    <table class="thead-dark">
      <%= form_with model: @genre,local: true do |f| %>
      <tr>
        <div class="form-group">
          <th style="width: 30%"><i class="fas fa-layer-group"></i> Genre</th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: auto"><%= f.text_field :genre, class: "form-control"%></td>
        </div>
      </tr>
    </table>
    <div>
      <p class="mt-5">
        <%= link_to  genres_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
          Back
        <% end %>
        <%= f.button :type => "submit", class: "btn btn-primary rounded-pill" do %>
        <i class="far fa-check-circle"></i> Save
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"></i> Home
        <% end %>
      </p>
    </div>
    <% end %>
  </div>
</div>