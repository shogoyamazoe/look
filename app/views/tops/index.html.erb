<h1>GIVE & SENT</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= link_to give_items_path, class: "btn btn-outline-warning rounded-pill", method: :get do %>
      <i class="fas fa-gift"> gift item</i>
      <% end %>
      <%= link_to new_give_person_path, class: "btn btn-outline-danger rounded-pill", method: :get do %>
      <i class="fa-solid fa-people-group "> presenter </i>
      <% end %>
      <%= link_to new_genre_path, class: "btn btn-outline-primary rounded-pill", method: :get do %>
      <i class="fas fa-layer-group"> genre </i>
      <% end %>
    </div>
    <div class="col-sm-6">
      <%= link_to sent_items_path, class: "btn btn-outline-info rounded-pill", method: :get do %>
      <i class="fas fa-gift"> sent item</i>
      <% end %>
      <%= link_to new_family_person_path, class: "btn btn-outline-success rounded-pill", method: :get do %>
      <i class=" fa-solid fa-users"> family </i>
      <% end %>
      <%= link_to new_genre_path, class: "btn btn-outline-dark rounded-pill", method: :get do %>
      <i class="far fa-calendar-check"> calendar </i>
      <% end %>
    </div>
  </div>
</div>