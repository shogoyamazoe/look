<div class="container">
  <div class="row">
    <div class="col-auto">
      <h3><i class=" fa-solid fa-users"> family index</i></h3>
    </div>
  </div>
  <div class="text-right">
    <p>
      <%= link_to new_family_person_path, class: "btn btn-outline-success rounded-pill", method: :get do %>
      <i class=" fa-solid fa-users"> new</i>
      <% end %>
    </p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-grid gap-3">
        <table class="table table-hover">
          <thead class="table-success">
            <th><i class=" fa-solid fa-users"> family</i>
            </th>
            <th></th>
          </thead>
          <% @family_persons.each do |family_person| %>
          <tr>
            <td><%= link_to family_person.family_person,family_person_path(family_person)%></td>
            <td>
              <div class="d-flex justify-content-end">
                <%= link_to edit_family_person_path(family_person),class: "btn btn-outline-dark, rounded-circle btn-lg", method: :get do %>
                <i class="far fa-edit"></i>
                <% end %>
                <%= link_to family_person_path(family_person),class: "btn btn-danger rounded-circle btn-lg", method: :delete, data: { confirm: "本当に削除しますか？" } do %>
                <i class="far fa-trash-alt fa-1x"></i>
                <% end %>
            </td>
          </tr>
          <% end %>
        </table>
        <p>
          <%= link_to  root_path, class: "btn btn-default rounded-pill" do %>
          <i class="fas fa-arrow-circle-left"></i>
          <span>back</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
</div>