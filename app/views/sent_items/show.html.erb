<div class="container mb-5">
  <i class="far fa-flag fa-4x"> detail</i>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>
            <div class="m-3">
              <i class="fas fa-child"> Registered person</i>
            </div>
          </th>
        </tr>
        <tr>
          <td>
            <div class="mx-3">
              <% if @sent_item.user.image? %>
              <img src=<%= @sent_item.user.image %> class="icon_image">
              <% else %>
              <%= image_tag "/assets/default.png", class: "icon_image" %>
              <% end %>
              <%= @sent_item.user.name %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="m-5">
              <% if @sent_item.image? %>
              <%= image_tag @sent_item.image.url %>
              <% elsif @sent_item.genre.genre == "お金" %>
              <%= image_tag "/assets/money001.png", class: "money_image" %>
              <% else %>
              <%= image_tag "/assets/present.png", class: "present_image" %>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-6">
      <div class="mt-3 table-hover">
        <table>
          <tr>
            <th class="border-bottom style=width 50%"><i class="fas fa-gifts"> gift</i></th>
            <td class="border-bottom"><%= @sent_item.product%></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fa-solid fa-user"> presenter</i></th>
            <td class="border-bottom"><%= @sent_item.sent_person.sent_person %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-user"> family</i></th>
            <td class="border-bottom"><%= @sent_item.family_person.family_person %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-layer-group"> genre</i></th>
            <td class="border-bottom"><%= @sent_item.genre.genre %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-money-bill-alt"> amount</i></th>
            <td class="border-bottom"><%= @sent_item.price %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-comment-dots"> reason</i></th>
            <td class="border-bottom"><%= @sent_item.reason %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-file-alt"> text</i>
            <td class="border-bottom"><%= @sent_item.introduction %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-calendar-alt"> Present date</i></th>
            <td class="border-bottom"><%= @sent_item.sent_day %></td>
          </tr>
          <% if @sent_item.have_return? %>
          <% @sent_item.sent_returns.each do |sent_item_return| %>
          <tr>
            <th class="border-bottom"><i class="fas fa-reply"></i><i class="fas fa-gift"> return item</i></th>
            <td class="border-bottom">
              <%= sent_item_return.product %>
            </td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-reply"></i><i class="far fa-money-bill-alt"> return amount</i>
            </th>
            <td class="border-bottom">
              <%= sent_item_return.price %>
            </td>
          <tr>
            <% end %>
            <% end %>
            <th><i class="far fa-calendar-check"> create date</i></th>
            <td><%= @sent_item.created_at.to_s(:datetime_jp)%></td>
          </tr>
          </tr>
        </table>
      </div>
    </div>
    <div class="container">
      <p>
        <%= link_to  sent_items_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
        <span>back</span>
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"> home</i>
        <% end %>
      </p>
    </div>
  </div>
</div>