<div class="container mb-5">
  <h3><i class="far fa-flag"></i> Detail</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>
            <div class="m-3">
              <i class="fas fa-child"></i> Registered person
            </div>
          </th>
        </tr>
        <tr>
          <td>
            <div class="mx-3">
              <% if @give_item.user.image? %>
              <img src=<%= @give_item.user.image %> class="icon_image">
              <% else %>
              <%= image_tag "/assets/default.png", class: "icon_image" %>
              <% end %>
              <%= @give_item.user.name %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="m-5">
              <% if @give_item.image? %>
              <%= image_tag @give_item.image.url %>
              <% elsif %>
              <% @give_item.genre.genre == "お金" %>
              <%= image_tag "/assets/money001.png", class: "money_image" %>
              <% else %>
              <%= image_tag "/assets/present.png", class: "present_image" %>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="col">
      <div class="mt-3 table-hover">
        <table>
          <tr>
            <th class="border-bottom"><i class="fas fa-gifts"></i> Gift</th>
            <td class="border-bottom"><%= @give_item.product%></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fa-solid fa-user"></i> :From ( presenter )</th>
            <td class="border-bottom"><%= @give_item.give_person.give_person %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-user"></i> :To ( family )</th>
            <td class="border-bottom"><%= @give_item.family_person.family_person %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-layer-group"></i> Genre</th>
            <td class="border-bottom"><%= @give_item.genre.genre %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-money-bill-alt"></i> Amount</th>
            <td class="border-bottom"><%= @give_item.price %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-comment-dots"></i> Reason</th>
            <td class="border-bottom"><%= @give_item.reason %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-file-alt"></i> Text
            <td class="border-bottom"><%= @give_item.introduction %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-calendar-alt"></i> Present Date</th>
            <td class="border-bottom"><%= @give_item.give_day %></td>
          </tr>
          <% if @give_item.have_return? %>
          <% @give_item.give_returns.each do |give_item_return| %>
          <tr>
            <th class="border-bottom"><i class="fas fa-reply"></i><i class="fas fa-gift"></i> Return Item</th>
            <td class="border-bottom">
              <%= give_item_return.product %>
            </td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-reply"></i><i class="far fa-money-bill-alt"></i> Return Amount</th>
            <td class="border-bottom">
              <%= give_item_return.price %>
            </td>
          </tr>
          <tr>
            <% end %>
            <% end %>
            <th class="border-bottom"><i class="far fa-calendar-check"></i> Create Date</th>
            <td class="border-bottom"><%= @give_item.created_at.to_s(:datetime_jp)%></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="container">
      <p>
        <%= link_to  give_items_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
          Back
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"></i> Home
        <% end %>
      </p>
    </div>
  </div>
</div>