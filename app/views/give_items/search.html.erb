<div class="container">
  <div class="row">
    <div class="col-auto">
      <p><i class="fas fa-search fa-2x"></i> Give Item Search</p>
      <i class="far fa-check-circle"></i> search Results : <%= @give_items.count %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="d-grid gap-3">
          <table class="table table-hover">
            <% @give_items.each_with_index do |give_item,i| %>
            <thead class="table-danger">
              <tr>
                <th>Item No. <%=i +1 %></th>
                <th></th>
              </tr>
            </thead>
            <tr>
              <th><i class="fas fa-gifts"></i> Gift</th>
              <td><%= link_to give_item.product,give_item_path(give_item)%></td>
            </tr>
            <tr>
              <th><i class="fa-solid fa-user"></i> : From</th>
              <td><%= give_item.give_person.give_person %></td>
            </tr>
            <tr>
              <th><i class="far fa-user"> : To</i></th>
              <td><%= give_item.family_person.family_person %></td>
            </tr>
            <tr>
              <th><i class="far fa-money-bill-alt"></i> Amount</th>
              <td><%= give_item.price %></td>
            </tr>
            <tr>
              <th><i class="far fa-comment-dots"></i> Reason</th>
              <td><%= give_item.reason %></td>
            </tr>
            <tr>
              <th><i class="far fa-calendar-alt"></i> Date</th>
              <td><%= give_item.give_day %></td>
            </tr>
            <% if give_item.have_return? %>
            <tr>
              <th><i class="fas fa-reply"></i><i class="fas fa-gift"></i> Return Item Count</th>
              <td>
                <%= link_to give_item.give_returns.count, index_show_give_returns_path(give_item) %>
              </td>
            </tr>
            <tr>
              <th><i class="fas fa-reply"></i><i class="far fa-money-bill-alt"></i> Return All Amount</th>
              <td>
                <%= give_item.total_price %>
              </td>
            </tr>
            <% end %>
            <tr>
              <th>
                <%= link_to new_give_return_path(give_item), class: "btn btn-outline-warning rounded-pill", method: :get do %>
                <i class="fas fa-gift"></i> Return Item
                <% end %>
              </th>
              <td></td>
            </tr>
            <tr>
              <td>
                <%= link_to edit_give_item_path(give_item),class: "btn btn-outline-dark, rounded-circle btn-lg", method: :get do %>
                <i class="far fa-edit"></i>
                <% end %>
                <%= link_to give_item_path(give_item),class: "btn btn-danger rounded-circle btn-lg", method: :delete, data: { confirm: "本当に削除しますか？" } do %>
                <i class="far fa-trash-alt fa-1x"></i>
                <% end %>
              </td>
              <td></td>
            </tr>
            <% end %>
          </table>
          <p><%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
            <i class="fas fa-home"></i> Home
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>