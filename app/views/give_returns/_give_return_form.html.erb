<div class="row">
  <div class="col mx-4">
    <h3><i class="fas fa-gift"></i> Return Gift</h3>
  </div>
</div>
<div class="row">
  <div class="col-100 mx-auto">
    <table class="thead-dark">
      <%= form_with model: @give_return,local: true do |f| %>
      <tr>
        <div class="form-group">
          <th style="width: 40%"><i class="fas fa-gifts"></i> Return Gift</th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: 55%"><%= f.text_field :product , class: "form-control"%></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th style="width: 30%"><i class="fas fa-layer-group"></i> Genre</th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: auto%">
            <%= f.collection_select :genre_id, Genre.all, :id, :genre,{include_blank: "選択して下さい"}, {class: "form-control input-sm"} %>
          </td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th style="width: 30%"><i class="far fa-money-bill-alt"></i> Amount</th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: auto%"><%= f.number_field :price, class: "form-control" %></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th style="width: 30%"><i class="far fa-file-alt"></i> Text</th>
          <th style="width: 5%">
            <div></div>
          </th>
          <td style="width: auto%"><%= f.text_field  :introduction, class: "form-control"%></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th style="width: 30%"><i class="far fa-calendar-alt"></i> Return Date</th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: auto%"><%= f.date_field :return_day, class: "form-control"%></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th style="width: 30%"><i class="fas fa-image"></i> photo</th>
          <th style="width: 5%">
          </th>
          <td style="width: auto%">
            <%= f.label :image, "Phto Select",class: "image_input_btn"  %>
            <%= f.file_field:image, class: "image_form"  %>
          </td>
        </div>
      </tr>
      <tr>
        <div>
          <%= f.hidden_field :give_item_id,value: @give_return.give_item_id %>
        </div>
      </tr>
    </table>
    <p class="mt-3">
      <%= link_to  give_items_path, class: "btn btn-default rounded-pill" do %>
      <i class="fas fa-arrow-circle-left"></i>
        Back
      <% end %>
      <%= f.button :type => "submit", class: "btn btn-primary rounded-pill" do %>
      <i class="far fa-check-circle"></i> Save
      <% end %>
      <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
      <i class="fas fa-home"></i> Home
      <% end %>
    </p>
    <% end %>
  </div>
</div>
