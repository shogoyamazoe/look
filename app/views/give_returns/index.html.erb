<div class="container">
  <div class="row">
    <div class="col-auto">
      <h3><i class="fas fa-gifts"> give return item index</i></h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-grid gap-3">
        <table class="table table-hover">
          <% @give_returns.each_with_index do |give_return,i| %>
          <thead class="table-warning">
            <tr>
              <th> RETURN ITEM No. <%=i +1 %></th>
              <th></th>
            </tr>
          </thead>
          <tr>
            <th><i class="fas fa-gifts"> gift</i></th>
            <td><%= link_to give_return.product,give_return_path(give_return)%></td>
          </tr>
          <tr>
            <th><i class="far fa-user"> : from</i></th>
            <td><%= give_return.give_item.family_person.family_person %></td>
          </tr>
          <tr>
            <th><i class="fa-solid fa-user"> : from</i></th>
            <td><%= give_return.give_item.give_person.give_person %></td>
          </tr>
          <tr>
            <th><i class="far fa-money-bill-alt"> amount</i></th>
            <td><%= give_return.price %></td>
          </tr>
          <tr>
            <th><i class="far fa-calendar-alt"> date</i></th>
            <td><%= give_return.return_day %></td>
          </tr>
          <tr>
            <td>
              <%= link_to edit_give_return_path(give_return),class: "btn btn-outline-dark, rounded-circle btn-lg", method: :get do %>
              <i class="far fa-edit"></i>
              <% end %>
              <%= link_to give_return_path(give_return),class: "btn btn-danger rounded-circle btn-lg", method: :delete, data: { confirm: "本当に削除しますか？" } do %>
              <i class="far fa-trash-alt fa-1x"></i>
              <% end %></td>
            <td></td>
          </tr>
          <% end %>
        </table>
        <p><%= link_to  root_path, class: "btn btn-default rounded-pill" do %>
          <i class="fas fa-arrow-circle-left"></i>
          <span>back</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>