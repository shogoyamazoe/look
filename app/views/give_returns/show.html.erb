<div class="container mb-5">
  <h3><i class="far fa-flag"></i> Detail</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>
            <div class="m-3">
              <i class="fas fa-child"></i> Registered Person
            </div>
          </th>
        </tr>
        <tr>
          <td>
            <div class="mx-3">
              <% if @give_return.user.image? %>
              <img src=<%= @give_return.user.image %> class="icon_image">
              <% else %>
              <%= image_tag "/assets/default.png", class: "icon_image" %>
              <% end %>
              <%= @give_return.user.name %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="m-5">
              <% if @give_return.image? %>
              <%= image_tag @give_return.image.url %>
              <% elsif %>
              <% @give_return.genre.genre == "お金" %>
              <%= image_tag "/assets/money001.png", class: "money_image" %>
              <% else %>
              <%= image_tag "/assets/present.png", class: "present_image" %>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="col">
      <div class="mt-3 table-hover">
        <table>
          <tr>
            <th class="border-bottom style=width 50%"><i class="fas fa-gifts"></i> Gift</th>
            <td class="border-bottom"><%= @give_return.product%></td>
          </tr>
          <tr>
            <th class="border-bottom style=width 50%"><i class="far fa-user"></i> : From</th>
            <td class="border-bottom"><%= @give_return.give_item.family_person.family_person %></td>
          </tr>
          <tr>
            <th class="border-bottom style=width 50%"><i class="fa-solid fa-user"></i> : To</th>
            <td class="border-bottom"><%= @give_return.give_item.give_person.give_person %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-layer-group"></i> Genre</th>
            <td class="border-bottom"><%= @give_return.genre.genre %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-money-bill-alt"></i> Amount</th>
            <td class="border-bottom"><%= @give_return.price %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-file-alt"></i> Text
            <td class="border-bottom"><%= @give_return.introduction %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-calendar-alt"></i> Present Date</th>
            <td class="border-bottom"><%= @give_return.return_day %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="container">
      <p>
        <%= link_to  give_items_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
          Back
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"></i> Home
        <% end %>
      </p>
    </div>
  </div>
</div>
