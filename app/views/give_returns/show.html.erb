<div class="container mb-5">
  <i class="fas fa-search-plus fa-4x"> detail</i>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>
            <div class="m-3">
              <i class="fas fa-child"> Registered person</i>
            </div>
          </th>
        </tr>
        <tr>
          <td>
            <div class="mx-3">
              <% if @give_return.user.image? %>
              <img src=<%= @give_return.user.image %> class="icon_image">
              <% else %>
              <%= image_tag "/assets/default.png", class: "icon_image" %>
              <% end %>
              <%= @give_return.user.name %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="m-5">
              <% if @give_return.image? %>
              <%= image_tag @give_return.iamge.url %>
              <% elsif @give_return.genre_id == 1 %>
              <%= image_tag "/assets/money001.png", class: "money_image" %>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-6">
      <div class="mt-3 table-hover">
        <table>
          <tr>
            <th class="border-bottom style=width 50%"><i class="fas fa-gifts"> gift</i></th>
            <td class="border-bottom"><%= @give_return.product%></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-layer-group"> genre</i></th>
            <td class="border-bottom"><%= @give_return.give_item.genre.genre %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-money-bill-alt"> amount</i></th>
            <td class="border-bottom"><%= @give_return.price %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-file-alt"> text</i>
            <td class="border-bottom"><%= @give_return.introduction %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-calendar-alt"> Present date</i></th>
            <td class="border-bottom"><%= @give_return.return_day %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="container">
      <p>
        <%= link_to  give_items_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
        <span>back</span>
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"> home</i>
        <% end %>
      </p>
    </div>
  </div>
</div>