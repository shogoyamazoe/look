<div class="container">
  <div class="row">
    <div class="col-auto">
      <h3><i class="fas fa-gifts"></i> Gift Return Index</h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-grid gap-3">
        <table class="table table-hover">
          <% @give_returns.each_with_index do |give_return,i| %>
          <thead class="table-danger">
            <tr>
              <th>Return No. <%=i +1 %></th>
              <th></th>
            </tr>
          </thead>
          <tr>
            <th><i class="fas fa-gifts"></i> Gift</th>
            <td><%= link_to give_return.product, give_return_path(give_return)%></td>
          </tr>
          <tr>
            <th><i class="far fa-money-bill-alt"></i> Amount</th>
            <td><%= give_return.price %></td>
          </tr>
          <tr>
            <th><i class="far fa-comment-dots"></i> Reason</th>
            <td><%= give_return.introduction %></td>
          </tr>
          <tr>
            <th><i class="far fa-calendar-alt"></i> Date</th>
            <td><%= give_return.return_day %></td>
          </tr>
          <tr>
            <td>
              <%= link_to edit_give_return_path(give_return),class: "btn btn-outline-dark, rounded-circle btn-lg", method: :get do %>
              <i class="far fa-edit"></i>
              <% end %>
              <%= link_to give_return_path(give_return),class: "btn btn-danger rounded-circle btn-lg", method: :delete, data: { confirm: "本当に削除しますか？" } do %>
              <i class="far fa-trash-alt fa-1x"></i>
              <% end %>
            </td>
            <td></td>
          </tr>
          <% end %>
        </table>
        <p><%= link_to  give_items_path, class: "btn btn-default rounded-pill" do %>
          <i class="fas fa-arrow-circle-left"></i>
            Back
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>