<div class="container mb-5">
  <div class="col-100 mx-auto">
    <h3><i class="far fa-flag"> detail</i></h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>
            <div class="m-3">
              <i class="fas fa-child"> Registered person</i>
            </div>
          </th>
        </tr>
        <tr>
          <td>
            <div class="mx-3">
              <% if @sent_return.user.image? %>
              <img src=<%= @sent_return.user.image %> class="icon_image">
              <% else %>
              <%= image_tag "/assets/default.png", class: "icon_image" %>
              <% end %>
              <%= @sent_return.user.name %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="m-5">
              <% if @sent_return.image? %>
              <%= image_tag @sent_return.image.url %>
              <% elsif %>
              <% @sent_return.genre.genre == "お金" %>
              <%= image_tag "/assets/money001.png", class: "money_image" %>
              <% else %>
              <%= image_tag "/assets/present.png", class: "present_image" %>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-6">
      <div class="mt-3 table-hover">
        <table>
          <tr>
            <th class="border-bottom style=width 50%"><i class="fas fa-gifts"> gift</i></th>
            <td class="border-bottom"><%= @sent_return.product%></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="fas fa-layer-group"> genre</i></th>
            <td class="border-bottom"><%= @sent_return.sent_item.genre.genre %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-money-bill-alt"> amount</i></th>
            <td class="border-bottom"><%= @sent_return.price %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-file-alt"> text</i>
            <td class="border-bottom"><%= @sent_return.introduction %></td>
          </tr>
          <tr>
            <th class="border-bottom"><i class="far fa-calendar-alt"> Present date</i></th>
            <td class="border-bottom"><%= @sent_return.return_day %></td>
          </tr>
          <tr>
            <td>
              <%= link_to edit_sent_return_path(@sent_return),class: "btn btn-outline-dark, rounded-circle btn-lg", method: :get do %>
              <i class="far fa-edit"></i>
              <% end %>
              <%= link_to sent_return_path(@sent_return),class: "btn btn-danger rounded-circle btn-lg", method: :delete, data: { confirm: "本当に削除しますか？" } do %>
              <i class="far fa-trash-alt fa-1x"></i>
              <% end %></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="container">
      <p>
        <%= link_to  sent_items_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
        <span>back</span>
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"> home</i>
        <% end %>
      </p>
    </div>
  </div>
</div>