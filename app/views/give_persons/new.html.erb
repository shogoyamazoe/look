<div class="container mt-5">
  <#%= render "shared/error" ,obj: @give_person %>
    <% if flash.now[:notice] %>
    <p class="notice"><%= flash.now[:notice] %></p>
    <% end %>

    <div class="row">
      <div class="col-100 mx-auto">
        <h3>くれた人登録</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-100 mx-auto">
        <table class="thead-dark">
          <%= form_with model: @give_person, url: {controller: 'give_persons', action: 'create' }, local: true do |f| %>
          </tr>
          <div class="form-group">
            <th><%= f.label :give_person ,"くれた人" %><span class="badge badge-danger">必須</span></th>
            <td><%= f.text_field :give_person , class: "form-control"%></td>
          </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :involvement ,"つながり" %><span class="badge badge-danger">必須</span></th>
              <td><%= f.text_field  :involvement, class: "form-control"%></td>
            </div>
          </tr>
        </table>
        <p class="mt-3"><%= f.submit "登録完了" ,class: "btn btn-primary"%></p>
        <%= link_to "ホームへ戻る", root_path ,class: "btn btn-secondary"%>
        <% end %>
      </div>
    </div>
</div>