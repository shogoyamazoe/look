<div class="container">
  <%= render "shared/error_messages" ,obj: @give_person %>
  <% if flash.now[:notice] %>
  <p class="notice"><%= flash.now[:notice] %></p>
  <% end %>
  <h3><i class="fa-solid fa-user"></i> Presenter Register</h3>
</div>
<div class="row">
  <div class="col mx-3">
    <table class="thead-dark">
      <%= form_with model: @give_person, url: {controller: 'give_persons', action: 'create' } , local: true do |f| %>
      <tr>
        <div class="form-group">
          <th style="width: 40%"><i class="fa-solid fa-user"></i> Presenter</th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: 55%"><%= f.text_field :give_person, class: "form-control"%></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <th style="width: 40%"><i class="far fa-handshake"></i>< Connection/th>
          <th style="width: 5%">
            <div class="badge badge-danger"> required</div>
          </th>
          <td style="width: 55%"><%= f.text_field :involvement, class: "form-control"%></td>
        </div>
      </tr>
    </table>
    <div>
      <p class="mt-5">
        <%= link_to  give_persons_path, class: "btn btn-default rounded-pill" do %>
        <i class="fas fa-arrow-circle-left"></i>
          Back
        <% end %>
        <%= f.button :type => "submit", class: "btn btn-primary rounded-pill" do %>
        <i class="far fa-check-circle"></i> Save
        <% end %>
        <%= link_to root_path, class: "btn btn-secondary rounded-pill" do %>
        <i class="fas fa-home"></i> Home
        <% end %>
      </p>
    </div>
    <% end %>
  </div>
</div>
