<h3>くれた人一覧</h3>
<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-auto mx-5">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">名前</th>
            <th scope="col">つながり</th>
            <th scope="col">登録日</th>
          </tr>
        </thead>
        <tbody>

          <% @give_persons.each do |give_person| %>
          <tr>
            <td scope="col"><%= link_to give_person.give_person,give_person_path(give_person)%></td>
            <td scope="col"><%= give_person.involvement %></td>
            <td scope="col"><%= give_person.created_at.to_s(:date_jp)%></td>
          </tr>
          <% end %>

        </tbody>
      </table>
      <p><%= link_to  root_path, class: 'btn btn-default' do %>
        <i class="fas fa-arrow-circle-left"></i>
        <span>戻る</span>
        <% end %>
      </p>
    </div>
  </div>
</div>